
<div class="d-flex h-100 text-center ">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <h1>Profil de <%= @user.first_name %>  <%= @user.last_name %></h1>
        <h3>Avatar actuel</h3>
        <%if @user.avatar.attached?%>
          <%= image_tag @user.avatar, alt: 'avatar', class:'img-thumbnail height:150px' %>
        <%else%>
          <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
        <%end%>
        <br><br>
          <h3>Changer d'avatar ?</h3>
          <%= form_tag user_avatars_path(@user), multipart: true do %>
            <%= file_field_tag :avatar %>
            <%= submit_tag "mettre à jour" %>
          <% end %>
        <br><br>
        <p>
            prénom : <%= @user.first_name %><br/>
            nom : <%= @user.last_name %><br/>
            description : <%= @user.description %><br/>
            e-mail : <%= @user.email %><br/>
        </p>
        <p>Vous souhaitez modifier votre Mail/Mot de passe ? </p>
        <div class="col">
        <%= link_to "Edit email / password", edit_user_registration_path, class:'btn btn-primary btn-lg' %>
        </div>
      <div class="container">
        <!-- Example row of columns -->
        <% @admins.each do |event| %>
        <div class="row">
          <div class="col-md-4">
            <h2><%= event.title %></h2>
            <p><%= event.description %></p>
            <a class="btn btn-secondary" href="<%= event_path(event) %>" role="button">Voir l'évènement &raquo;</a>
        </div>
        <% end %>
    </div>
