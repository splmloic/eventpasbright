<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
<%= form_for(@user, url: admin_user_path(@user), method: :patch, html: { class: "form-signin mt-3" }) do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Updater le profil de <%=@user.email%></h1>
        <div class="form-group">
          <%= f.label  :first_name, "Prénom" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label  :last_name, "Nom" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label  :description, "Description" %><br />
          <%= f.text_field :description, autofocus: true, class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "éditer", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
